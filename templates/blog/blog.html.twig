{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block active_blog %}active{% endblock %}

{% block body %}
<div class="ui raised very padded text container segment">
  <h2 class="ui header">Bienvenue sur {{ controller_name }} !</h2>

<div class="ui unstackable items">
  {% for article in articles %}
  <div class="item">
    <div class="image">
      <img src="{{ article.image }}">
    </div>
    <div class="content">
      <a class="header" href="{{ path('article', {'id' : article.id}) }}">{{ article.title }}</a>
      <div class="meta">
        <span>{{ article.content | truncate(100, false, '...') | raw }}</span>
      </div>
      <div class="description">
        <p></p>
      </div>
      <div class="extra">
        Crée le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }}
      </div>
    </div>
  </div>
  {% endfor %}
</div>
</div>
{% endblock %}
